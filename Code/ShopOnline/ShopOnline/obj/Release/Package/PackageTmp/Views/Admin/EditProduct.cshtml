@model ShopOnline.Models.ProductInfoViewModel
<div class="modal fade" id="modalEditProduct" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="myModalLabel">Sửa Thông Tin Sản Phẩm</h4>
            </div>
            <div class="modal-body">
                <div class="panel">

                    <div class="panel-body">
                        <div class="row">
                            <div class="col-lg-12">
                                <input class="productid" type="hidden" />
                                <div class="form-group">
                                    <label>Hình Ảnh</label>
                                    <form class="product-images"></form>
                                </div>
                                <form role="form">
                                    <div class="form-group">
                                        <label>Hàng Mới</label>
                                        <input type="checkbox" class="product-isnew"/>
                                    </div>
                                    <div class="form-group">
                                        <label>Danh Mục</label>
                                        <select class="form-control product-categories" multiple="multiple">
                                            @foreach (var item in Model.Categories)
                                            {
                                                <option value="@item.CategoryId">@item.CategoryName</option>
                                            }
                                        </select>
                                    </div>
                                    <div class="form-group">
                                        <label class="pull-left margin-right-2">Nhãn Hiệu</label>
                                        <select class="form-control product-brand width20">
                                            <option>Không</option>
                                            @foreach (var item in Model.Brands)
                                            {
                                                <option value="@item.BrandId">@item.BrandName</option>
                                            }
                                        </select>
                                    </div>
                                    <div class="form-group">
                                    <label class="pull-left margin-right-2">Màu Sắc</label>
                                        <select class="form-control product-colors width20" multiple="multiple">
                                            @foreach (var item in Model.Colors)
                                            {
                                                <option color-value="@item.ColorValue" value="@item.ColorId">@item.ColorName</option>
                                            }
                                        </select>
                                    </div>
                                    <div class="form-group">
                                        <label>Tên Sản Phẩm</label>
                                        <input name="productName" class="form-control product-name required" data-msg-required="Vui Lòng Nhập Tên Sản Phẩm" placeholder="Nhập Tên Sản Phẩm">
                                    </div>
                                    <div class="form-group">
                                        <label>Mã Sản Phẩm</label>
                                        <input name="productCode" class="form-control product-code required" data-msg-required="Vui Lòng Nhập Mã Sản Phẩm" placeholder="Nhập Mã Sản Phẩm">
                                    </div>
                                    <div class="form-group">
                                        <label>Giá</label>
                                        <input name="productPrice" class="form-control product-price required"  data-msg-required="Vui Lòng Nhập Giá Tiền Sản Phẩm" placeholder="Nhập Giá Tiền Sản Phẩm">
                                    </div>
                                    <div class="form-group">
                                        <label>Miêu Tả Ngắn</label>
                                        <input class="form-control product-shortdescription">
                                    </div>
                                    <div class="form-group">
                                        <label>Miêu Tả Chi Tiết</label>
                                        <input class="form-control product-detaildescription">
                                    </div>
                                </form>
                            </div>
                            <!-- /.col-lg-6 (nested) -->

                        </div>
                        <!-- /.row (nested) -->
                    </div>
                    <!-- /.panel-body -->
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Đóng</button>
                <button type="button" id="saveEditProduct" class="btn btn-primary">Lưu</button>
            </div>
        </div>
    </div>
</div>
