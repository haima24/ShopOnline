@{
    ViewBag.Title = "CategoriesSub";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
@model IEnumerable<ShopOnline.Models.CategoryViewModel>
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Chi Tiết Danh Mục</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Chỉnh Sửa Chi Tiết Danh Mục
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <p>
                    <button type="button" id="btnCreateCategorySub" class="btn btn-primary">Tạo</button>
                </p>
                <div class="dataTable_wrapper">
                    <table class="table table-striped table-bordered table-hover" id="category-sub-datatable">
                        <thead>
                            <tr>
                                <th style="width: 150px;">Chủng Loại</th>
                                <th>Tên Danh Mục</th>
                                <th style="width: 200px;">Thao Tác</th>
                            </tr>
                        </thead>
                    </table>
                </div>
                <!-- /.table-responsive -->

            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
   
</div>
<!-- /.row -->
<!-- Modal -->
@Html.Partial("NewCategorySub",Model)
@Html.Partial("EditCategorySub",Model)

@section scripts
{
    <script src="@Url.Content("~/Scripts/app/admin/category.sub.js")"></script>
}
