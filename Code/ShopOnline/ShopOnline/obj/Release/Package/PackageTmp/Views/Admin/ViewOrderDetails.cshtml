@model ShopOnline.Models.OrderViewModel
<div class="modal fade" id="modalOrderDetail" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="myModalLabel">Chi Tiết Đơn Đặt Hàng</h4>
            </div>
            <div class="modal-body">
                <div class="panel">

                    <div class="panel-body">
                        <div class="row">
                            <div class="col-lg-12">
                                <table class="table">
                                    <thead>
                                        <tr>
                                            <th colspan="2">Sản Phẩm</th>
                                            <th>Số Lượng</th>
                                            <th>Giá</th>
                                            <th colspan="2">Tổng Cộng</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model.OrderDetails)
                                        {
                                            var product = item.Product;
                                            <tr>
                                                <td>
                                                    <a href="#">
                                                        <img width="100" height="50" src="@Url.Content(product.ProductImageDisplay.ProductImageUrl)" alt="@product.ProductName">
                                                    </a>
                                                </td>
                                                <td>@product.ProductName
                                                </td>
                                                <td>
                                                    @item.Quantity
                                                </td>
                                                <td>@product.Price</td>
                                                <td>@item.TotalPrice</td>

                                            </tr>
                                        }

                                    </tbody>
                                    <tfoot>
                                        <tr>
                                            <th colspan="4">Tổng Cộng</th>
                                            <th>@Model.Total</th>
                                        </tr>
                                    </tfoot>
                                </table>
                            </div>
                            <!-- /.col-lg-6 (nested) -->

                        </div>
                        <!-- /.row (nested) -->
                    </div>
                    <!-- /.panel-body -->
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Đóng</button>
            </div>
        </div>
    </div>
</div>
