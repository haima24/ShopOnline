@{
    ViewBag.Title = "Đăng Ký/ Đăng Nhập";
    Layout = "~/Views/Shared/_ContactLayout.cshtml";
    ViewBag.PageTitle = "Đăng Ký/ Đăng Nhập";
}

<div class="col-md-6">
                        <div class="box">
                            <h2 class="text-uppercase">Tạo Tài Khoản Mới</h2>

                            <p class="lead">Bạn chưa đăng ký tài khoản?</p>
                            @*<p>text</p>*@
                            <p class="text-muted">Nếu có thắc mắc <a href="@Url.Action("Index","Contact")">liên hệ chúng tôi</a>, chúng tôi sẵn sàng hỗ trợ bạn 24/7.</p>

                            <hr>

                            <form action="/Contact/SignUp" method="post">
                                <div class="form-group">
                                    <label for="name-signup">Tài khoản</label>
                                    <input name="signUpUserName" type="text" class="form-control" id="name-signup">
                                </div>
                                <div class="form-group">
                                    <label for="email-signup">Email</label>
                                    <input type="text" class="form-control" id="email-signup">
                                </div>
                                <div class="form-group">
                                    <label for="password-signup">Mật Khẩu</label>
                                    <input name="signUpPassWord" type="password" class="form-control" id="password-signup">
                                </div>
                                <div class="text-center">
                                    <button type="submit" class="btn btn-template-main"><i class="fa fa-user-md"></i> Đăng Ký</button>
                                </div>
                            </form>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="box">
                            <h2 class="text-uppercase">Đăng Nhập</h2>

                            <p class="lead">Bạn đã có tài khoản?</p>
                            <p class="text-muted">Đăng nhập để chúng tôi có thể đáp ứng nhu cầu của bạn nhanh chóng.</p>

                            <hr>

                            <form action="/Contact/SignIn" method="post">
                                <div class="form-group">
                                    <label for="name-signin">Tài Khoản</label>
                                    <input type="text" class="form-control" id="name-signin">
                                </div>
                                <div class="form-group">
                                    <label for="password-signin">Mật Khẩu</label>
                                    <input type="password" class="form-control" id="password-signin">
                                </div>
                                <div class="text-center">
                                    <button type="submit" class="btn btn-template-main"><i class="fa fa-sign-in"></i> Log in</button>
                                </div>
                            </form>
                        </div>
                    </div>
