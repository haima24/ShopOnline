@{
    ViewBag.Title = "Nhập Địa Chỉ - Kiểm Tra Giỏ Hàng";
    Layout = "~/Views/Shared/_ContactLayout.cshtml";
}
@model ShopOnline.Models.CartViewModel
<div class="col-md-9 clearfix" id="checkout">

    <div class="box">
        <form id="form-checkout-step1" method="post" action="@Url.Action("CheckOutStep2","Cart")">

            <ul class="nav nav-pills nav-justified">
                <li class="active"><a href="#"><i class="fa fa-map-marker"></i>
                    <br>
                    Địa Chỉ</a>
                </li>
                <li class="disabled"><a href="#"><i class="fa fa-truck"></i>
                    <br>
                    Phương Thức Giao Hàng</a>
                </li>
                <li class="disabled"><a href="#"><i class="fa fa-money"></i>
                    <br>
                    Phương Thức Thanh Toán</a>
                </li>
                <li class="disabled"><a href="#"><i class="fa fa-eye"></i>
                    <br>
                    Xem Lại Đơn Hàng</a>
                </li>
            </ul>

            <div class="content">
                <div class="row">
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label for="name">Tên</label>
                            <input type="text" name="name" value="@Model.Name" class="form-control" id="name">
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label for="phone">Số Điện Thoại</label>
                            <input type="text" name="telephone" value="@Model.Telephone" class="form-control" id="phone">
                        </div>
                    </div>
                </div>
                <!-- /.row -->

                <div class="row">
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label for="street">Số Nhà, Tên Đường</label>
                            <input type="text" name="street" value="@Model.Street" class="form-control" id="street">
                        </div>
                    </div>
                    <div class="col-sm-6 col-md-3">
                        <div class="form-group">
                            <label for="city">Tỉnh,Thành Phố</label>
                            @Html.DropDownList("city",Model.CitySource,string.Empty,new {@id="city",@class="form-control"})
                        </div>
                    </div>
                    <div class="col-sm-6 col-md-3">
                        <div class="form-group">
                            <label for="district">Quận,Huyện</label>
                            @Html.DropDownList("district",Model.DistrictSource,string.Empty,new {@id="district",@class="form-control"})
                        </div>
                    </div>
                    
                </div>
                <!-- /.row -->

                <div class="row">

                    <div class="col-sm-6">
                        <div class="form-group">
                            <label for="Email">Email</label>
                            <input type="text" value="@Model.Email" name="email" class="form-control" id="Email">
                        </div>
                    </div>
                    

                </div>
                <!-- /.row -->
            </div>

            <div class="box-footer">
                <div class="pull-left">
                    <a href="@Url.Action("CheckOutCart","Cart")" class="btn btn-default"><i class="fa fa-chevron-left"></i>Trở Về Giỏ Hàng</a>
                </div>
                <div class="pull-right">
                    <button type="submit" class="btn btn-template-main">
                        Phương thức giao hàng<i class="fa fa-chevron-right"></i>
                    </button>
                </div>
            </div>
        </form>
    </div>
    <!-- /.box -->


</div>
<!-- /.col-md-9 -->
@{Html.RenderAction("RenderOrderSummary", "Cart");}
@section scripts{
    <script src="@Url.Content("~/Scripts/app/front/product.buy.view.js")"></script>
}
