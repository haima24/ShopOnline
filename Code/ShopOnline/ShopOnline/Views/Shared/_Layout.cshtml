                    </p>

                </div>
            </div>
        </div>
        <!-- /#copyright -->

        <!-- *** COPYRIGHT END *** -->



    </div>
    <!-- /#all -->


    <!-- #### JAVASCRIPT FILES ### -->

    <script src="@Url.Content("~/Content/bootstrap/js/jquery.js")"></script>

    <script src="@Url.Content("~/Content/bootstrap/js/bootstrap.js")"></script>

    <script src="@Url.Content("~/Content/component/js/jquery.cookie.js")"></script>
    <script src="@Url.Content("~/Content/component/js/waypoints.min.js")"></script>
    <script src="@Url.Content("~/Content/component/js/jquery.counterup.min.js")"></script>
    <script src="@Url.Content("~/Content/component/js/jquery.parallax-1.1.3.js")"></script>
    <script src="@Url.Content("~/Content/fly-to-element/codex-fly.js")"></script>
    <script src="@Url.Content("~/Content/component/js/front.js")"></script>
   
    
    @RenderSection("scripts", required: false)


</body>

</html>