<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="robots" content="all,follow">
    <meta name="googlebot" content="index,follow,snippet,archive">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>@ViewBag.Title</title>

    <meta name="keywords" content="">

    <link href='http://fonts.googleapis.com/css?family=Roboto:400,100,100italic,300,300italic,500,700,800' rel='stylesheet' type='text/css'>

    <!-- Bootstrap and Font Awesome css -->
    <link rel="stylesheet" href="@Url.Content("~/Content/font-awesome/css/font-awesome.css")">
    <link rel="stylesheet" href="@Url.Content("~/Content/bootstrap/css/bootstrap.css")">

    <!-- Css animations  -->
    <link href="@Url.Content("~/Content/css/animate.css")" rel="stylesheet">

    <!-- Theme stylesheet, if possible do not edit this stylesheet -->
    <link href="@Url.Content("~/Content/css/style.default.css")" rel="stylesheet" id="theme-stylesheet">
     <link href="@Url.Content("~/Content/css/validate.css")" rel="stylesheet">
    <!-- Custom stylesheet - for your changes -->
    <link href="@Url.Content("~/Content/css/custom.css")" rel="stylesheet">

    <!-- Responsivity for older IE -->
    <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
        <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
<![endif]-->

    <!-- Favicon and apple touch icons-->
    <link rel="shortcut icon" href="@Url.Content("~/images/img/favicon.ico")" type="image/x-icon" />
    <link rel="apple-touch-icon" href="@Url.Content("~/images/img/apple-touch-icon.png")" />
    <link rel="apple-touch-icon" sizes="57x57" href="@Url.Content("~/images/img/apple-touch-icon-57x57.png")" />
    <link rel="apple-touch-icon" sizes="72x72" href="@Url.Content("~/images/img/apple-touch-icon-72x72.png")" />
    <link rel="apple-touch-icon" sizes="76x76" href="@Url.Content("~/images/img/apple-touch-icon-76x76.png")" />
    <link rel="apple-touch-icon" sizes="114x114" href="@Url.Content("~/images/img/apple-touch-icon-114x114.png")" />
    <link rel="apple-touch-icon" sizes="120x120" href="@Url.Content("~/images/img/apple-touch-icon-120x120.png")" />
    <link rel="apple-touch-icon" sizes="144x144" href="@Url.Content("~/images/img/apple-touch-icon-144x144.png")" />
    <link rel="apple-touch-icon" sizes="152x152" href="@Url.Content("~/images/img/apple-touch-icon-152x152.png")"/>
</head>

<body>
    <div id="all">

        <header>

            <!-- *** TOP ***
_________________________________________________________ -->
            <div id="top">
                <div class="container">
                    <div class="row">
                        <div class="col-xs-5 contact">
                            <p class="hidden-sm hidden-xs">Liên hệ với chúng tôi qua 0909090 hoặc abc@gmail.com</p>
                            <p class="hidden-md hidden-lg"><a href="#" data-animate-hover="pulse"><i class="fa fa-phone"></i></a>  <a href="#" data-animate-hover="pulse"><i class="fa fa-envelope"></i></a>
                            </p>
                        </div>
                        <div class="col-xs-7">
                            <div class="social">
                                <a href="#" class="external facebook" data-animate-hover="pulse"><i class="fa fa-facebook"></i></a>
                                <a href="#" class="external gplus" data-animate-hover="pulse"><i class="fa fa-google-plus"></i></a>
                                <a href="#" class="external twitter" data-animate-hover="pulse"><i class="fa fa-twitter"></i></a>
                                <a href="#" class="email" data-animate-hover="pulse"><i class="fa fa-envelope"></i></a>
                            </div>

                            <div class="login">
                               @{Html.RenderAction("RenderLoginBar","Helper");}
                               
                            </div>

                        </div>
                    </div>
                </div>
            </div>

            <!-- *** TOP END *** -->

            <!-- *** NAVBAR ***
    _________________________________________________________ -->

            <div class="navbar-affixed-top" data-spy="affix" data-offset-top="50">

                <div class="navbar navbar-default yamm" role="navigation" id="navbar">

                    <div class="container">
                        <div class="navbar-header">

                            <a class="navbar-brand home" href="@Url.Action("Index","ProductList")">
                                 <img src="@Url.Content(Html.Action("GetConfigByCode", "Helper", new { code = "Logo" }).ToString())" width="187" height="42" alt="Universal logo" class="hidden-xs hidden-sm">
                                <img src="@Url.Content(Html.Action("GetConfigByCode", "Helper", new { code = "Logo" }).ToString())"  width="110" height="47" alt="Universal logo" class="visible-xs visible-sm"><span class="sr-only">ShopSi - Trang Chủ</span>
                            </a>
                            <div class="navbar-buttons">
                                <button type="button" class="navbar-toggle btn-template-main" data-toggle="collapse" data-target="#navigation">
                                    <span class="sr-only">Toggle navigation</span>
                                    <i class="fa fa-align-justify"></i>
                                </button>
                            </div>
                        </div>
                        <!--/.navbar-header -->

                        <div class="navbar-collapse collapse" id="navigation">

                            <ul class="nav navbar-nav navbar-right">
                                <li class="dropdown">
                                    <a id="cart-anchor" href="@Url.Action("CheckOutCart","Cart")" class="dropdown-toggle shopping-cart"><i class="fa fa-shopping-cart fa-2"></i><span id="cart-counter">@{Html.RenderAction("CountCart","Cart");}</span></a>
                                   
                                </li>
                                <li class="dropdown active">
                                    <a href="@Url.Action("Index","ProductList")" class="dropdown-toggle">Trang Chủ</a>
                                   
                                </li>
                                @{Html.RenderAction("RenderUserPanel","Contact");}
                            </ul>

                        </div>
                        <!--/.nav-collapse -->



                        <div class="collapse clearfix" id="search">

                            <form class="navbar-form" role="search">
                                <div class="input-group">
                                    <input type="text" class="form-control" placeholder="Search">
                                    <span class="input-group-btn">

                    <button type="submit" class="btn btn-template-main"><i class="fa fa-search"></i></button>

                </span>
                                </div>
                            </form>

                        </div>
                        <!--/.nav-collapse -->

                    </div>


                </div>
                <!-- /#navbar -->

            </div>

            <!-- *** NAVBAR END *** -->

        </header>

        <!-- *** LOGIN MODAL ***
_________________________________________________________ -->

        <div class="modal fade" id="login-modal" tabindex="-1" role="dialog" aria-labelledby="Login" aria-hidden="true">
            <div class="modal-dialog modal-sm">

                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                        <h4 class="modal-title" id="Login">Đăng Nhập</h4>
                    </div>
                    <div class="modal-body">
                        <form action="/Contact/Login" method="post">
                            <div class="form-group">
                                <input type="text" name="signInUsername" class="form-control" id="name_modal" placeholder="Tài Khoản">
                            </div>
                            <div class="form-group">
                                <input type="password" name="signInPassword" class="form-control" id="password_modal" placeholder="Mật Khẩu">
                            </div>

                            <p class="text-center">
                                <button type="button" id="btn-login-ajax" class="btn btn-template-main"><i class="fa fa-sign-in"></i> Đăng Nhập</button>
                            </p>

                        </form>

                        <p class="text-center text-muted">Bạn chưa có tài khoản</p>
                        <p class="text-center text-muted"><a href="@Url.Action("SignUpPage","Contact")"><strong>Đăng Ký Ngay</strong></a></p>

                    </div>
                </div>
            </div>
        </div>

        <!-- *** LOGIN MODAL END *** -->

        <div id="heading-breadcrumbs">
            <div class="container">
                <div class="row">
                    <div class="col-md-7">
                        <h1>@ViewBag.PageTitle</h1>
                    </div>
                    <div class="col-md-5">
                        <ul class="breadcrumb">
                            <li><a href="@Url.Action("Index","ProductList")">Trang Chủ</a>
                            </li>
                            <li>@ViewBag.PageTitle</li>
                        </ul>

                    </div>
                </div>
            </div>
        </div>

        <div id="content">
            <div class="container">

                <div class="row">


                    @RenderBody()

                </div>

            </div>
            <!-- /.container -->
        </div>
        <!-- /#content -->


        <!-- *** GET IT ***
_________________________________________________________ -->

        <div id="get-it">
            <div class="container">
                <div class="col-md-8 col-sm-12">
                    <h3>Bạn có muốn trở thành nhà cung cấp?</h3>
                </div>
                <div class="col-md-4 col-sm-12">
                    <a href="@Url.Action("Contact","Contact")" class="btn btn-template-transparent-primary">Liên hệ ngay</a>
                </div>
            </div>
        </div>


        <!-- *** GET IT END *** -->


        <!-- *** FOOTER ***
_________________________________________________________ -->

        <footer id="footer">
            <div class="container">
                <div class="col-md-3 col-sm-6">
                    <h4>Giới Thiệu</h4>

                    <p>@Html.Action("GetConfigByCode", "Helper", new { code = "Intro" }).ToString()</p>

                    <hr>

                    <h4>Đăng ký nhận tin qua Email</h4>

                    <form>
                        <div class="input-group">

                            <input type="text" class="form-control">

                            <span class="input-group-btn">

                        <button id="btn-subscribe" class="btn btn-default" type="button"><i class="fa fa-send"></i></button>

                    </span>

                        </div>
                        <!-- /input-group -->
                    </form>

                    <hr class="hidden-md hidden-lg hidden-sm">

                </div>
                <!-- /.col-md-3 -->

                <div class="col-md-3 col-sm-6">

                    <h4>Trực Tuyến</h4>

                    <div class="blog-entries">
                       @{Html.RenderAction("Employees","Contact");}
                    </div>

                    <hr class="hidden-md hidden-lg">

                </div>
                <!-- /.col-md-3 -->

                <div class="col-md-3 col-sm-6">

                    <h4>Liên Hệ</h4>

                    @Html.Raw(Html.Action("GetConfigByCode", "Helper", new { code = "Address" }).ToString())

                   <a href="@Url.Action("Contact","Contact")" class="btn btn-small btn-template-main">Liên Hệ Với Chúng Tôi</a>

                    <hr class="hidden-md hidden-lg hidden-sm">

                </div>
                <!-- /.col-md-3 -->



                <div class="col-md-3 col-sm-6">

                    <h4>Hình Ảnh</h4>

                    <div class="photostream">
                         @{Html.RenderAction("GetSixImages","Helper");}
                    </div>

                </div>
                <!-- /.col-md-3 -->
            </div>
            <!-- /.container -->
        </footer>
        <!-- /#footer -->

        <!-- *** FOOTER END *** -->

        <!-- *** COPYRIGHT ***
_________________________________________________________ -->

        <div id="copyright">
            <div class="container">
                <div class="col-md-12">
                    <p class="pull-left">&copy; 2015 - shopsi.com</p>
                    <p class="pull-right">Trang Web được thiết kế bởi <a href="http://facebook.com/minhtu2803">&copy;Akai777</a>
                        <!-- Not removing these links is part of the licence conditions of the template. Thanks for understanding :) -->
                    </p>

                </div>
            </div>
        </div>
        <!-- /#copyright -->

        <!-- *** COPYRIGHT END *** -->



    </div>
    <!-- /#all -->


    <!-- #### JAVASCRIPT FILES ### -->

    <script src="@Url.Content("~/Content/bootstrap/js/jquery.js")"></script>

    <script src="@Url.Content("~/Content/bootstrap/js/bootstrap.js")"></script>

    <script src="@Url.Content("~/Content/component/js/jquery.cookie.js")"></script>
    <script src="@Url.Content("~/Content/component/js/waypoints.min.js")"></script>
    <script src="@Url.Content("~/Content/component/js/jquery.counterup.min.js")"></script>
    <script src="@Url.Content("~/Content/component/js/jquery.parallax-1.1.3.js")"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.js")"></script>
    <script src="@Url.Content("~/Scripts/additional-methods.js")"></script>
        <script src="@Url.Content("~/Scripts/app/environment.js")"></script>
    <script src="@Url.Content("~/Content/fly-to-element/codex-fly.js")"></script>
    <script src="@Url.Content("~/Content/component/js/front.js")"></script>
    <script src="@Url.Content("~/Scripts/app/front/general.js")"></script>
   
    
    @RenderSection("scripts", required: false)


</body>

</html>