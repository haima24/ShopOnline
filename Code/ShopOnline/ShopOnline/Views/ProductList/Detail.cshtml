@{
    ViewBag.Title = "Chi Tiết Sản Phẩm: " + Model.ProductName + " - hangtotgiasi.com";
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.PageTitle = "Chi Tiết Sản Phẩm: " + Model.ProductName;
}

@using ShopOnline.Extension
@model ShopOnline.Models.ProductViewModel
@Html.HiddenFor(x=>x.ProductId)
<p class="lead">@Html.Raw(Model.ProductShortDescription)</p>
<p class="goToDescription">
    <a href="#details" class="scroll-to text-uppercase">Đi đến thông tin chi tiết sản phẩm</a>
</p>

<div class="row" id="productMain">
    <div class="col-sm-6">
        <div id="mainImage">
            <img src="@Url.Content(Model.ProductImageDisplay.ProductImageUrl)" alt="" class="img-responsive">
        </div>

        @if (Model.IsNew.HasValue && Model.IsNew.Value)
        {
            <div class="ribbon new">
                <div class="theribbon">Mới</div>
                <div class="ribbon-background"></div>
            </div>
            <!-- /.ribbon -->
        }



    </div>
    <div class="col-sm-6">
        <div class="box">

            <form>
                <div class="sizes">

                    <h3>Giá Tiền</h3>

                    @* <label for="size_s">
                        <a href="#">S</a>
                        <input type="radio" id="size_s" name="size" value="s" class="size-input">
                    </label>
                    <label for="size_m">
                        <a href="#">M</a>
                        <input type="radio" id="size_m" name="size" value="m" class="size-input">
                    </label>
                    <label for="size_l">
                        <a href="#">L</a>
                        <input type="radio" id="size_l" name="size" value="l" class="size-input">
                    </label>*@

                </div>

                <p class="price">@Model.Price.ToSystemFormat()</p>

                <p class="text-center">
                    <button type="button" product-id="@Model.ProductId" id="btn-add-to-cart" class="btn btn-template-main"><i class="fa fa-shopping-cart"></i>Thêm Vào Giỏ Hàng</button>
                    <button type="button" class="btn btn-default" data-toggle="tooltip" data-placement="top" title="" data-original-title="Thêm Vào Yêu Thích">
                        <i class="fa fa-heart-o"></i>
                    </button>
                </p>

            </form>
        </div>

        <div class="row" id="thumbs">
            @foreach (var images in Model.ProductImages)
            {
                <div class="col-xs-4">
                    <a href="@Url.Content(images.ProductImageUrl)" class="thumb">
                        <img src="@Url.Content(images.ProductImageUrl)" alt="" class="img-responsive">
                    </a>
                </div>
            }
        </div>
    </div>

</div>


<div class="box" id="details">
    @Html.Raw(Model.ProductDetailDescription)
</div>
<div class="box" id="comments" product-id="@Model.ProductId">
    @{Html.RenderAction("RenderCommentSection", "Comment");}

    <h4 class="text-uppercase"><span id="comment-count">0</span> Bình Luận @{Html.RenderAction("RenderSignUpToCommentLink", "Comment");}</h4>
    <div id="comments-container">
    </div>
    <p class="goToDescription">
    <a id="view-more-comment" class="pointer">Xem Thêm Bình Luận</a>
</p>
</div>
