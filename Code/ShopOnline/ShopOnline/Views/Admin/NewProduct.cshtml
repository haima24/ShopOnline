@model IEnumerable<ShopOnline.Models.CategoryViewModel>
<div class="modal fade" id="modalNewProduct" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="myModalLabel">Tạo Sản Phẩm</h4>
            </div>
            <div class="modal-body">
                <div class="panel">

                    <div class="panel-body">
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="form-group">
                                    <label>Hình Ảnh</label>
                                    <form action="/Admin/CreateProduct" class="product-images" multiple></form>
                                </div>
                                <form role="form">
                                    <div class="form-group">
                                        <label>Danh Mục</label>
                                        <select class="form-control product-categories" multiple="multiple">
                                            @foreach (var item in Model)
                                            {
                                                <option value="@item.CategoryId">@item.CategoryName</option>
                                            }
                                        </select>
                                    </div>
                                    <div class="form-group">
                                        <label>Tên Sản Phẩm</label>
                                        <input class="form-control product-name" placeholder="Nhập Tên Sản Phẩm">
                                    </div>
                                    <div class="form-group">
                                        <label>Mã Sản Phẩm</label>
                                        <input class="form-control product-code" placeholder="Nhập Mã Sản Phẩm">
                                    </div>
                                    <div class="form-group">
                                        <label>Giá</label>
                                        <input class="form-control product-price" placeholder="Nhập Giá Tiền Sản Phẩm">
                                    </div>
                                    <div class="form-group">
                                        <label>Miêu Tả Ngắn</label>
                                        <input class="form-control product-shortdescription">
                                    </div>
                                    <div class="form-group">
                                        <label>Miêu Tả Chi Tiết</label>
                                        <input class="form-control product-detaildescription">
                                    </div>
                                </form>
                            </div>
                            <!-- /.col-lg-6 (nested) -->

                        </div>
                        <!-- /.row (nested) -->
                    </div>
                    <!-- /.panel-body -->
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Đóng</button>
                <button type="button" id="saveNewProduct" class="btn btn-primary">Lưu</button>
            </div>
        </div>
    </div>
</div>
