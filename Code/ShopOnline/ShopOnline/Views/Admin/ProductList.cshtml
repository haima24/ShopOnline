@{
    ViewBag.Title = "ProductList";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
@model ShopOnline.Models.ProductInfoViewModel
<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Sản Phẩm</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Chỉnh Sửa Thông Tin Sản Phẩm
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <p>
                    <button type="button" id="btnCreateProduct" class="btn btn-primary">Tạo</button>
                </p>
                <div class="dataTable_wrapper">
                    <table class="table table-striped table-bordered table-hover" id="product-datatable">
                        <thead>
                            <tr>
                                <th style="width: 200px;">Hình Ảnh</th>
                                <th>Tên Hàng</th>
                                <th>Màu</th>
                                <th>Mã Hàng</th>
                                <th>Giá</th>
                                <th style="width: 70px;">Ngày Tạo</th>
                                <th style="width: 70px;">Ngày Sửa</th>
                                <td>Hàng Mới</td>
                                <th style="width: 130px;">Thao Tác</th>
                            </tr>
                        </thead>
                    </table>
                </div>
                <!-- /.table-responsive -->

            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
   
</div>
<!-- /.row -->
@Html.Partial("NewProduct",Model)
@Html.Partial("EditProduct",Model)

@section scripts
{
    <script src="@Url.Content("~/Scripts/app/admin/product.list.js")"></script>
}

