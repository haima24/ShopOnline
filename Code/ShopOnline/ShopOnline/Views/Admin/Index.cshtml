@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Shop Online - Trang Quản Lí</title>

    <!-- Bootstrap Core CSS -->
    <link href="@Url.Content("~/Content/bootstrap/css/bootstrap.css")" rel="stylesheet" />
    <!-- MetisMenu CSS -->
    <link href="@Url.Content("~/Content/metisMenu/dist/metisMenu.css")" rel="stylesheet" />
    <!-- DataTables CSS -->
    <link href="@Url.Content("~/Content/bootstrap/css/dataTables.bootstrap.css")" rel="stylesheet" />
    <link href="@Url.Content("~/Content/bootstrap/css/bootstrap-multiselect.css")" rel="stylesheet" />
    <!-- DataTables Responsive CSS -->
    <link href="@Url.Content("~/Content/bootstrap/css/dataTables.responsive.css")" rel="stylesheet" />
    <!-- Custom CSS -->
    <link href="@Url.Content("~/Content/css/sb-admin-2.css")" rel="stylesheet" />
    <!-- Custom Fonts -->
    <link href="@Url.Content("~/Content/font-awesome/css/font-awesome.css")" rel="stylesheet" />

</head>

<body>

    <div class="container">
        <div class="row">
            <div class="col-md-4 col-md-offset-4">
                <div class="login-panel panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">Vui Lòng Đăng Nhập</h3>
                    </div>
                    <div class="panel-body">
                        <form action="/Admin/Login" role="form">
                            <fieldset>
                                <div class="form-group">
                                    <input class="form-control" placeholder="Tài Khoản" name="adminLoginName" type="text" autofocus>
                                </div>
                                <div class="form-group">
                                    <input class="form-control" placeholder="Mật Khẩu" name="adminLoginPassword" type="password" value="">
                                </div>
                                <div class="checkbox">
                                    <label>
                                        <input name="remember" type="checkbox" value="Remember Me">Ghi Nhớ
                                    </label>
                                </div>
                                <!-- Change this to a button or input when using this as a form -->
                                <button type="submit" class="btn btn-lg btn-success btn-block">Đăng Nhập</button>
                            </fieldset>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

   <!-- jQuery -->
    <script src="@Url.Content("~/Content/bootstrap/js/jquery.js")"></script>

    <!-- Bootstrap Core JavaScript -->
    <script src="@Url.Content("~/Content/bootstrap/js/bootstrap.js")"></script>

    <!-- Metis Menu Plugin JavaScript -->
    <script src="@Url.Content("~/Content/metisMenu/dist/metisMenu.js")"></script>

    <!-- DataTables JavaScript -->
    <!-- Custom Theme JavaScript -->
    <script src="@Url.Content("~/Scripts/sb-admin-2.js")"></script>

</body>

</html>
