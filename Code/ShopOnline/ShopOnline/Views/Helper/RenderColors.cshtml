@model List<ShopOnline.Models.ColorViewModel>
@foreach (var item in Model)
{
    <div class="checkbox">
        <label>
            <input class="filter-color" color-id="@item.ColorId" type="checkbox">
            <span class="colour" style="background-color: @(item.ColorValue)"></span> @item.ColorName <span>(@item.ProductCount)</span>
        </label>
    </div>

}
